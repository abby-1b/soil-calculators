	body
		div#content
			div#title
				h1
				div
					img(src="./assets/insignia-uprm-hires.png")
					input(type="button")#switch-button

			num-input(@, purpose="ppmAl")
			num-input(@, purpose="cmolAlKg")
			slider(@, purpose="factor")

			div#output
				div ...
