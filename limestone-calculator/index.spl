
slider(@).input
	h2
	input(type="range" min="1" max="3" step="0.25" oninput="sliderChange(this)").inner-slider
	div.slider-label ####

num-input(@).input
	h2
	input(type="number" placeholder="123.45" min="0" oninput="inputChange(this)")

html
